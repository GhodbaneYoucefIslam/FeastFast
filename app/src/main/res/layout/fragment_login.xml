<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.signupFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/welcomeImage"
            android:layout_width="414dp"
            android:layout_height="371dp"
            android:src="@drawable/welcome"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/becomeMember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Welcom Back"
            android:textColor="#FF9800"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/welcomeImage" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="373dp"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/input_border"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/passwordInput" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="380dp"
            android:layout_height="62dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/input_border"
            app:layout_constraintEnd_toEndOf="@+id/nsmeInput"
            app:layout_constraintTop_toTopOf="@+id/nsmeInput" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/nsmeInput"
            android:layout_width="380dp"
            android:layout_height="62dp"
            android:layout_marginTop="8dp"
            android:hint="Enter your email"
            android:inputType="textEmailAddress"
            android:textColor="#000000"
            android:textColorHint="#444444"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emailLabel" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passwordInput"
            android:layout_width="370dp"
            android:layout_height="49dp"
            android:hint="Enter your password"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textColorHint="#444444"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.388"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passwordLabel" />

        <TextView
            android:id="@+id/emailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Emali"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="@+id/nsmeInput"
            app:layout_constraintTop_toBottomOf="@+id/becomeMember" />

        <TextView
            android:id="@+id/passwordLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="password"
            android:textColor="#020000"
            app:layout_constraintStart_toStartOf="@+id/emailLabel"
            app:layout_constraintTop_toBottomOf="@+id/nsmeInput" />

        <TextView
            android:id="@+id/signupLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="Don't have an account ? Sigh up now"
            android:textColor="#444444"
            android:textSize="19sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loginAction" />

        <Button
            android:id="@+id/loginAction"
            android:layout_width="308dp"
            android:layout_height="52dp"
            android:layout_marginTop="44dp"
            android:background="@drawable/selceted_rounded_button"
            android:text="Login"
            app:backgroundTint="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passwordInput" />

        <TextView
            android:id="@+id/forgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Forgot password?"
            android:textColor="#444444"
            app:layout_constraintEnd_toEndOf="@+id/passwordInput"
            app:layout_constraintTop_toBottomOf="@+id/passwordInput" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>